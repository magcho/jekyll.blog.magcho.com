{
  "name": "penguin",
  "version": "1.0.0",
  "description": "Welcome to your new Jekyll theme! In this directory, you'll find the files you need to be able to package up your theme into a gem. Put your layouts in `_layouts`, your includes in `_includes`, your sass files in `_sass` and any other assets in `assets`.",
  "main": "index.js",
  "scripts": {
    "serve": "browser-sync start --server --serveStatic dist --files 'css/*.css, js/*.js, *.html'",
    "build": "npm run build:sass & npm run build:pug",
    "build:sass": "node-sass --include-path scss scss/style.scss css/style.css",
    "build:pug": "pug ./pug -o ./ --pretty",
    "watch": "npm run serve & npm run watch:sass & npm run watch:pug",
    "watch:sass": "nodemon -e scss -x \"npm run build:sass\"",
    "watch:pug": "nodemon -e pug -x \"npm run build:pug\"",
    "release": "npm run release:sass & npm run release:pug",
    "release:sass": "node-sass --include-path scss scss/style.scss assets/css/style.css --output-style compressed",
    "release:pug": "pug ./pug -o ./",
    "ws": "ws",
    "pug": "pug",
    "sass": "node-sass",
    "autoprefixer": "postcss assets/css/base.css --use autoprefixer -o assets/css/base.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magcho/jekyll-penguin.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/magcho/jekyll-penguin/issues"
  },
  "homepage": "https://github.com/magcho/jekyll-penguin#readme",
  "devDependencies": {
    "browser-sync": "^2.23.7",
    "local-web-server": "^2.5.2",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
